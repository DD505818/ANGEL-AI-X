{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ANGEL Control Plane Command",
  "type": "object",
  "required": ["version", "timestamp", "command", "signature"],
  "properties": {
    "version": { "type": "string", "enum": ["1.0"] },
    "timestamp": { "type": "string", "format": "date-time" },
    "command": {
      "type": "object",
      "required": ["action"],
      "properties": {
        "action": { "type": "string", "enum": ["HALT", "RESUME", "GEAR"] },
        "gear": { "type": "integer", "minimum": 1, "maximum": 10 }
      },
      "additionalProperties": false
    },
    "signature": {
      "type": "object",
      "required": ["alg", "value"],
      "properties": {
        "alg": { "type": "string", "enum": ["ed25519"] },
        "value": { "type": "string", "pattern": "^[A-Fa-f0-9]{128}$" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
